<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/popup_width"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:background="#ffd6ff32">

    <TextView
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        android:background="@color/themeColor"
        android:textColor="#FFF"
        android:text="Forgot Password?"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/title"  />

    <RelativeLayout
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:id="@+id/ll"
        android:padding="5dp"
        android:background="@color/popupBackgroundColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/popupTextColor"
            android:textSize="15sp"
            android:id="@+id/t1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registered Email Id"
            android:layout_below="@+id/t1"
            android:background="@drawable/edit_text2"
            android:paddingLeft="5dp"
            android:paddingRight="7dp"
            android:textSize="15sp"
            android:id="@+id/et_email"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:textColor="@color/popupTextColor"
            android:textColorHint="@color/popupHintColor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/t2"
            android:textColor="@color/popupTextColor"
            android:textSize="14sp"
            android:text="@string/after_forgot_password"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_below="@+id/et_email"/>

     </RelativeLayout>


    <Button
        android:layout_width="@dimen/popup_button_width"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textColor="#FFF"
        android:id="@+id/codeButton"
        android:background="@drawable/scanner_button"
        android:layout_gravity="center_horizontal|bottom"/>

</LinearLayout>