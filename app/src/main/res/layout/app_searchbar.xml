<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/darkBlue"
    android:minHeight="@dimen/search">

    <LinearLayout
        android:id="@+id/originalLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/layoutCategory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.scribblernotebooks.scribblernotebooks.CustomViews.RoundedImageView
                android:id="@+id/category"
                android:layout_width="@dimen/searchBarIconSize"
                android:layout_height="@dimen/searchBarIconSize"
                android:layout_centerHorizontal="true"
                android:src="@drawable/category" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/category"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Category"
                android:textColor="#fff"
                android:textSize="@dimen/searchBarTextSize" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutScan"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/searchBarIconLeftMargin"
            android:layout_marginStart="@dimen/searchBarIconLeftMargin"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.scribblernotebooks.scribblernotebooks.CustomViews.RoundedImageView
                android:id="@+id/scan"
                android:layout_width="@dimen/searchBarIconSize"
                android:layout_height="@dimen/searchBarIconSize"
                android:layout_centerHorizontal="true"
                android:src="@drawable/scan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scan"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Scan"
                android:textColor="#fff"
                android:textSize="@dimen/searchBarTextSize" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/searchBarIconLeftMargin"
            android:layout_marginStart="@dimen/searchBarIconLeftMargin"
            android:gravity="center">

            <com.scribblernotebooks.scribblernotebooks.CustomViews.RoundedImageView
                android:id="@+id/search"
                android:layout_width="@dimen/searchBarIconSize"
                android:layout_height="@dimen/searchBarIconSize"
                android:layout_centerHorizontal="true"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Search"
                android:textColor="#fff"
                android:textSize="@dimen/searchBarTextSize" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutSort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/searchBarIconLeftMargin"
            android:layout_marginStart="@dimen/searchBarIconLeftMargin"
            android:gravity="center">

            <com.scribblernotebooks.scribblernotebooks.CustomViews.RoundedImageView
                android:id="@+id/sort"
                android:layout_width="@dimen/searchBarIconSize"
                android:layout_height="@dimen/searchBarIconSize"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sort" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sort"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Sort"
                android:textColor="#fff"
                android:textSize="@dimen/searchBarTextSize" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/replacedLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search"
        android:background="@color/darkBlue"
        android:orientation="horizontal"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.scribblernotebooks.scribblernotebooks.CustomViews.RoundedImageView
                android:id="@+id/selectedIcon"
                android:layout_width="@dimen/searchBarIconSize"
                android:layout_height="@dimen/searchBarIconSize"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@drawable/category" />

            <TextView
                android:id="@+id/selectedIcon_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectedIcon"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:minWidth="40dp"
                android:text="Category"
                android:textColor="#FFF"
                android:textSize="@dimen/searchBarTextSize" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="3.4">

            <EditText
                android:id="@+id/selectedQuery"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/edit_text2"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:hint=""
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete"
                android:paddingLeft="15dp"
                android:textColor="@color/loginEditText2TextColor"
                android:textColorHint="@color/loginEditTextHintColor"
                android:textSize="@dimen/searchBarEditTextFontSize" />


            <ImageView
                android:id="@+id/cancel"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="5dp"
                android:src="@drawable/ic_action_cancel" />

        </FrameLayout>


        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_weight="0.6"
            android:src="@drawable/ic_action_search" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:maxHeight="200dp"
        android:background="@color/darkBlue"
        android:layout_below="@+id/replacedLinearLayout"
        android:visibility="gone" />
</RelativeLayout>