<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:gravity="center_horizontal"
    android:padding="5dp">

    <!--start of cardView-->
    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="@dimen/cardViewListItem_radius"
        card_view:cardElevation="5sp"
        card_view:cardMaxElevation="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/listviewitem_selected"
            android:id="@+id/listView_container"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/deal_icon"
                android:layout_weight="3"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:scaleType="fitCenter"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:paddingLeft="3sp"
                android:id="@+id/detailsContainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tearMark"
                    android:layout_marginRight="5sp"
                    android:layout_marginEnd="5sp"
                    android:src="@drawable/tear"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_toEndOf="@id/tearMark"
                    android:layout_toRightOf="@id/tearMark"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/dealTitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff744e"
                    android:textSize="10sp"
                    android:layout_marginRight="3sp"
                    android:layout_marginEnd="3sp"
                    android:layout_marginTop="5sp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:id="@+id/text_category"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5sp"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:layout_toEndOf="@id/tearMark"
                    android:layout_toRightOf="@id/tearMark"
                    android:id="@+id/dealDetails"
                    android:layout_below="@id/dealTitle"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="8sp"
                android:background="@drawable/new_background"
                android:textColor="#FFF"
                android:id="@+id/newhot"
                />
            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3">
                    <!--<LinearLayout android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:orientation="horizontal"-->
                        <!--android:layout_weight="1">-->
                        <!--<ImageView-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:src="@drawable/date"-->
                            <!--/>-->
                    <!--<TextView-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:text="Like"-->
                        <!--android:gravity="center"-->
                         <!--/>-->
                    <!--</LinearLayout>-->
                    <Button
                        style="@style/Widget.AppCompat.Light.ActionButton"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="Like"
                        android:drawableLeft="@drawable/like"
                        />
                    <Button
                        style="@style/Widget.AppCompat.Light.ActionButton"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:text="Share"
                        android:drawableLeft="@drawable/share"
                        />
                    <Button
                        style="@style/Widget.AppCompat.Light.ActionButton"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:textSize="14sp"
                        android:text="Claim"
                        android:drawableLeft="@drawable/claim"
                        />
                    <!--<TextView-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="Share"-->
                        <!--android:gravity="center"-->
                        <!--/>-->
                    <!--<TextView-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="Claim"-->
                        <!--android:gravity="center"-->
                        <!--/>-->

                </TableRow>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <!--end of cardView-->
</LinearLayout>