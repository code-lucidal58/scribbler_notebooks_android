<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#54C4CC"
    tools:context="com.scribblernotebooks.scribblernotebooks.Activities.SplashScreen">


    <com.andraskindler.parallaxviewpager.ParallaxViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/illustrations_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/topCurve"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:scaleType="fitXY"
        android:src="@drawable/splash_top_green" />

    <ImageView
        android:id="@+id/whiteLogo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/whiteLogoheight"
        android:layout_alignBottom="@+id/topCurve"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/logo_white" />

    <LinearLayout
        android:id="@+id/lowerCurve"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lowerCurveHeight"
        android:layout_alignParentBottom="true"
        android:background="@drawable/splash_lower_green"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/bottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe to Continue -->"
            android:textColor="#FFF" />

    </LinearLayout>


</RelativeLayout>
