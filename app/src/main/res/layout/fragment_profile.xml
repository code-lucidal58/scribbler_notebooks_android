<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileBackgroundColor"
    tools:context="com.scribblernotebooks.scribblernotebooks.ProfileFragment">

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/profileCoverPic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/navigation_drawer_cover_pic" />


                <com.scribblernotebooks.scribblernotebooks.CustomViews.RoundedImageView
                    android:id="@+id/pic"
                    android:layout_width="@dimen/profile_profilepic_size"
                    android:layout_height="@dimen/profile_profilepic_size"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right|end"
                    android:background="#55ffffff"
                    android:layout_marginTop="60dp"
                    android:textColor="#FFF"
                    android:text="Change"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="16sp"/>

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl"
                android:text="Basic Information"
                android:background="@color/darkBlue"
                android:minHeight="25dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:textColor="#FFF"
                android:id="@+id/t1"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/basicRecyclerView"
                android:layout_below="@id/t1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/basicRecyclerView"
                android:orientation="horizontal">



                <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="@dimen/half_login_editText_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

                <com.facebook.login.widget.LoginButton
                    android:layout_width="@dimen/half_login_editText_width"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_button"
                    android:padding="0dp"
                    android:layout_marginTop="5dp" />

 
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        style="@style/Theme.AppCompat"
        android:id="@+id/toolbar"
        android:background="#5513657b"/>
</RelativeLayout>
