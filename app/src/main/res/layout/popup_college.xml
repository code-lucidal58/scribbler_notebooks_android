<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/popup_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="@dimen/popup_width"
        android:layout_height="wrap_content"
        android:background="@color/themeColor"
        android:gravity="center"
        android:minHeight="50dp"
        android:padding="10dp"
        android:text="Select your College"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:textSize="16sp"
        android:text="To give you deals specially for your college, enter your college below. You can skip this and enter afterwards in the profile settings."
        android:textColor="#000"/>

    <com.rey.material.widget.Spinner
        android:id="@+id/college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textSize="15sp"
        android:dropDownHeight="100dp"
        android:layout_marginTop="10dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:weightSum="2">

        <Button
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="#FFF"
            android:background="@drawable/scanner_button"
            android:text="Skip" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Okay"
            android:textColor="#FFF"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/scanner_button"
            android:id="@+id/okay"/>

    </TableRow>

</LinearLayout>