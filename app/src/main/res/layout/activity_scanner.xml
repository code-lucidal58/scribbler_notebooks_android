<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <eu.livotov.zxscan.ScannerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scanner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/scanner_frame"/>


    <Button
        android:layout_width="@dimen/scanner_button_width"
        android:layout_height="40dp"
        android:id="@+id/swtichToManual"
        android:text="Enter Scribbler Code"
        android:background="@drawable/scanner_button"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal|bottom"/>


</FrameLayout>
