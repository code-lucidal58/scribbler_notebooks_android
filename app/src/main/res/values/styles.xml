<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/themeColor</item>
        <item name="android:textColor">#ff191919</item>

    </style>

    <style name="ScannerTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>


    <style name="font" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SignInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:textCursorDrawable">@drawable/bootstrap_edit_text_cursor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/bootstrap_edittext</item>
    </style>


</resources>
